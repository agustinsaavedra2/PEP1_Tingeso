pipeline{
    agent any
    stages{
        stage("Build Frontend"){
            steps{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/hector-gallardo-araya/ayudantia-mingeso']])
                dir("pep1_tingeso_frontend"){
                    bat "npm install"
                    bat "npm run build"
                }
            }
        }
        stage("Build and Push Docker Image"){
            steps{
                dir("pep1_tingeso_frontend"){
                    script{
                         withDockerRegistry(credentialsId: 'docker-credentials'){
                            bat "docker build -t agustinsaavedra056/pep1_tingeso_frontend:latest ."
                            bat "docker push agustinsaavedra056/pep1_tingeso_frontend:latest"
                        }
                    }                    
                }
            }
        }
    }
}